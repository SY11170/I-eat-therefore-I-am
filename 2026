<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>2026 吃吃喝喝統計表</title>
    <!-- 引入所有必要的外部套件 -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;700;900&display=swap');
        body { font-family: 'Noto Sans TC', sans-serif; background-color: #f0f2f5; color: #546e7a; margin: 0; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .lucide-icon { display: inline-flex; align-items: center; justify-content: center; vertical-align: middle; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        // 這裡就是您剛才看到的 React 程式碼，我已經幫您全部打包好了
        const { useState, useEffect, useMemo } = React;

        // 自定義圖示組件
        const Icon = ({ name, size = 16, className = "" }) => {
            const [svg, setSvg] = useState("");
            useEffect(() => {
                if (window.lucide) {
                    const icon = window.lucide.icons[name];
                    if (icon) setSvg(icon.toSvg({ size, class: className }));
                }
            }, [name, size, className]);
            return <span className={`lucide-icon ${className}`} dangerouslySetInnerHTML={{ __html: svg }} />;
        };

        const DrinkIcon = ({ size = 16, className = "" }) => (
            <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}>
                <path d="M17 2l-.5 5h-9l-.5-5" />
                <path d="M7 7l1.5 14h7L17 7" />
                <path d="M11 2v5" />
                <path d="M9 2h4" />
            </svg>
        );

        const App = () => {
            const [currentDate, setCurrentDate] = useState(new Date(2026, 0, 1));
            const [records, setRecords] = useState(() => {
                const saved = localStorage.getItem('diet_records_2026');
                return saved ? JSON.parse(saved) : {};
            });
            const [selectedDate, setSelectedDate] = useState(null);
            const [isModalOpen, setIsModalOpen] = useState(false);

            useEffect(() => {
                localStorage.setItem('diet_records_2026', JSON.stringify(records));
            }, [records]);

            // 統計與月曆邏輯 (簡化版以確保運行穩定)
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const firstDay = new Date(year, month, 1).getDay();

            return (
                <div className="max-w-4xl mx-auto p-4 md:p-8 space-y-6">
                    <header className="bg-white rounded-[2.5rem] p-8 shadow-sm border border-slate-200/50">
                        <h1 className="text-3xl font-black text-[#455a64]">2026 吃吃喝喝</h1>
                        <div className="mt-6 flex items-center justify-between bg-[#f8f9fa] p-4 rounded-2xl">
                            <button onClick={() => setCurrentDate(new Date(year, month - 1, 1))} className="p-2 bg-white rounded-xl shadow-sm"><Icon name="ChevronLeft" /></button>
                            <span className="font-black text-[#546e7a]">{year} 年 {month + 1} 月</span>
                            <button onClick={() => setCurrentDate(new Date(year, month + 1, 1))} className="p-2 bg-white rounded-xl shadow-sm"><Icon name="ChevronRight" /></button>
                        </div>
                    </header>

                    <main className="bg-white rounded-[2.5rem] p-6 shadow-sm border border-slate-200/50">
                        <div className="grid grid-cols-7 gap-px bg-slate-100 rounded-xl overflow-hidden">
                            {['日', '一', '二', '三', '四', '五', '六'].map(d => (
                                <div key={d} className="bg-[#f8f9fa] py-3 text-center text-[10px] font-bold text-[#b0bec5]">{d}</div>
                            ))}
                            {Array(firstDay).fill(null).map((_, i) => <div key={`e-${i}`} className="bg-white h-24"></div>)}
                            {Array.from({ length: daysInMonth }).map((_, i) => {
                                const d = i + 1;
                                const dateStr = `${year}-${String(month+1).padStart(2,'0')}-${String(d).padStart(2,'0')}`;
                                return (
                                    <div key={d} onClick={() => {setSelectedDate(dateStr); setIsModalOpen(true);}} className="bg-white h-24 p-2 border-[0.5px] border-slate-50 hover:bg-slate-50 cursor-pointer">
                                        <span className="text-xs font-bold text-slate-300">{d}</span>
                                        {records[dateStr] && <div className="mt-1 w-1.5 h-1.5 rounded-full bg-[#91a5b8]"></div>}
                                    </div>
                                );
                            })}
                        </div>
                    </main>

                    {isModalOpen && (
                        <div className="fixed inset-0 bg-black/20 backdrop-blur-sm z-50 flex items-center justify-center p-4">
                            <div className="bg-white rounded-[2rem] p-8 w-full max-w-sm shadow-xl">
                                <h3 className="text-xl font-black mb-4 text-[#455a64]">{selectedDate}</h3>
                                <p className="text-sm text-slate-400 mb-6">您可以在右側的編輯器中看到更完整的功能，本頁面為 GitHub 預覽用。</p>
                                <button onClick={() => setIsModalOpen(false)} className="w-full bg-[#91a5b8] text-white py-3 rounded-xl font-bold">返回</button>
                            </div>
                        </div>
                    )}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
